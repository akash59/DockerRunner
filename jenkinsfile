pipeline{
	agent any
	stages {
		stage("Start Grid") {
		    steps{
			    sh "docker-compose up -d --no-color hub chrome firefox"
		    }
	    }
	    stage("Run Tests") {
		    steps{
			    sh "docker-compose up google-search-chrome google-search-firefox"
		    }
	    }
	    stage("Stop Grid") {
		    steps{
			    sh "docker-compose down --no-color"
		    }
	    }
	}
	
}