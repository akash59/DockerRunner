pipeline{
	agent any
	stages {
		stage("Start Grid") {
		    steps{
			    sh "docker-compose up -d --no-color hub chrome firefox"
		    }
	    }
	    stage("Run Tests") {
		    steps{
			    sh "docker-compose up google-search-chrome google-search-firefox"
		    }
	    }
	}

	post{
		always{
			archiveArtifacts artifacts: 'output/**'
			sh "docker-compose down"
		}
	}
	
}